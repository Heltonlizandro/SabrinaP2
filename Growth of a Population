//https://www.codewars.com/kata/563b662a59afc2b5120000c6

class Arge {
    
    public static int nbYear(int p0, double percent, int aug, int p) {
        // your code
        int years = 0;
        int inhabitants = p0;
        while(inhabitants < p)
        {
            inhabitants = (int)(inhabitants + (inhabitants * (float)(percent/100)) + aug);
            years++;
        }
        return years;
    }
}
