//https://www.codewars.com/kata/5679aa472b8f57fb8c000047

public class Kata {
  public static int findEvenIndex(int[] arr) {
    // your code
			for (int i=0; i<arr.length; i++){
			  int ini = 0;
		    int fim = 0;
		     for (int j=i; j<=arr.length-1; j++){
		      fim = fim + arr[j];
		    }
		    for (int k=0; k<=i; k++){
		      ini = ini + arr[k];
		    }
		    if (ini == fim){
		      return i;
		    }
		  }
		  return -1;	
  }
}
